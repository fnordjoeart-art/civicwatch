<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Civic Watch – Segnalazioni cittadino & Comune</title>
  <meta name="description" content="Piattaforma per segnalazioni dei cittadini con geolocalizzazione, foto, workflow e notifiche. Semplice per il cittadino, efficiente per il Comune." />
  <link rel="icon" href="/logo.jpg" />
  <style>
    :root{
      --bg:#0f1220; --panel:#12182a; --text:#eaf0ff; --muted:#93a4c9;
      --brand:#6570F5; --accent:#FFD34E; --stroke:rgba(255,255,255,.08);
    }
    @media (prefers-color-scheme: light){
      :root{ --bg:#f7f9fc; --panel:#ffffff; --text:#0f172a; --muted:#475569; --stroke:rgba(2,6,23,.08) }
    }
    *{box-sizing:border-box}
    body{margin:0;background:var(--bg);color:var(--text);font:16px/1.6 system-ui,-apple-system,Segoe UI,Inter,Roboto,Helvetica,Arial,sans-serif}
    img{max-width:100%;display:block}
    a{color:inherit;text-decoration:none}
    .container{max-width:1100px;margin:0 auto;padding:0 20px}
    header{position:sticky;top:0;z-index:50;background:rgba(0,0,0,.2);backdrop-filter:blur(10px);border-bottom:1px solid var(--stroke)}
    .nav{display:flex;align-items:center;justify-content:space-between;padding:14px 0}
    .brand{display:flex;align-items:center;gap:.6rem;font-weight:800}
    .brand img{width:28px;height:28px;border-radius:6px;object-fit:cover}
    nav ul{display:flex;list-style:none;gap:1rem;margin:0;padding:0}
    nav a{opacity:.9;font-weight:600}
    .btn{display:inline-flex;align-items:center;gap:.45rem;background:var(--brand);color:#fff;border:1px solid transparent;padding:.75rem 1rem;border-radius:12px;font-weight:700}
    .btn.secondary{background:transparent;border-color:var(--stroke);color:var(--text)}
    .hero{position:relative;overflow:hidden;padding:80px 0 40px}
    .bgfx{position:absolute;inset:-40% -10% auto -10%;height:60vh;pointer-events:none;background:
      radial-gradient(60% 60% at 70% -10%, #6570F544, transparent 60%),
      radial-gradient(40% 40% at 0% 10%, #C0C4EF33, transparent 60%)}
    .hero .grid{display:grid;gap:18px;grid-template-columns:1.1fr .9fr;align-items:center}
    @media (max-width:900px){ .hero .grid{grid-template-columns:1fr} }
    h1{font-size:clamp(2rem,3.6vw + .6rem,3.2rem);line-height:1.08;margin:.2rem 0 .6rem}
    p.lead{color:var(--muted);max-width:680px;margin:0 0 .6rem}
    .actions{display:flex;gap:.7rem;flex-wrap:wrap;margin-top:.8rem}
    .badgebar{display:flex;gap:.8rem;flex-wrap:wrap;margin:1rem 0}
    .badge{display:inline-flex;align-items:center;gap:.5rem;border:1px solid var(--stroke);background:rgba(255,255,255,.04);padding:.35rem .6rem;border-radius:12px}
    .badge img{height:18px;width:auto;opacity:.9}
    .card{background:var(--panel);border:1px solid var(--stroke);border-radius:16px;padding:16px}
    .grid3{display:grid;gap:14px}
    @media (min-width:760px){ .grid3{grid-template-columns:repeat(3,1fr)} }
    section{padding:56px 0}
    .section-title{margin:0 0 10px;font-size:clamp(1.5rem,2vw + .5rem,2rem)}
    .section-desc{color:var(--muted);max-width:760px;margin:0 0 10px}
    .screens{display:grid;gap:10px;grid-template-columns:repeat(2,1fr)}
    @media (min-width:900px){ .screens{grid-template-columns:repeat(4,1fr)} }
    footer{border-top:1px solid var(--stroke);padding:18px 0;color:var(--muted)}
    /* Intro animazione */
    .reveal{opacity:0;transform:translateY(12px);transition:.5s ease}
    .loaded .reveal{opacity:1;transform:none}
    .reveal:nth-child(2){transition-delay:.06s}
    .reveal:nth-child(3){transition-delay:.12s}
    .reveal:nth-child(4){transition-delay:.18s}

    /* Admin pannello (leggero) */
    .fab{position:fixed;right:16px;bottom:16px;z-index:80}
    .admin{position:fixed;right:16px;bottom:80px;z-index:90;width:min(420px,calc(100% - 32px));max-height:70vh;overflow:auto;background:var(--panel);border:1px solid var(--stroke);border-radius:14px;padding:14px;display:none}
    .admin label{display:block;margin:8px 0 4px;font-weight:600}
    .admin .row{display:grid;grid-template-columns:1fr 1fr;gap:10px}
    .export-area{width:100%;height:220px;border-radius:10px;border:1px solid var(--stroke);padding:.7rem;background:rgba(255,255,255,.03);color:var(--text)}
  </style>
</head>
<body>
  <header>
    <div class="container nav">
      <a class="brand" href="#home"><img src="/logo.jpg" alt="Logo"><span>Civic&nbsp;Watch</span></a>
      <nav>
        <ul>
          <li><a href="#funziona">Come funziona</a></li>
          <li><a href="#comune">Per il Comune</a></li>
          <li><a href="#cittadino">Per il Cittadino</a></li>
          <li><a href="#faq">FAQ</a></li>
          <li><a class="btn" href="#contatti">Richiedi demo</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main id="home" class="hero">
    <div class="bgfx" aria-hidden="true"></div>
    <div class="container">
      <div class="grid">
        <div>
          <div class="badgebar reveal">
            <!-- Mostra solo i badge che esistono -->
            <template id="badges"></template>
          </div>
          <h1 class="reveal">Segnalazioni rapide, gestione trasparente</h1>
          <p class="lead reveal">Una piattaforma per raccogliere e smistare le segnalazioni dei cittadini con geolocalizzazione, foto e workflow chiari. Semplice per il cittadino, efficiente per il Comune.</p>
          <div class="actions reveal">
            <a class="btn" href="#contatti">Richiedi una demo</a>
            <a class="btn secondary" href="#funziona">Guarda come funziona →</a>
          </div>
        </div>
        <div class="reveal">
          <!-- immagine/video anteprima app -->
          <img src="/uploads/screen1.jpg" alt="Anteprima applicazione" style="border-radius:16px;border:1px solid var(--stroke)">
        </div>
      </div>
    </div>
  </main>

  <section id="funziona">
    <div class="container">
      <h2 class="section-title">Come funziona</h2>
      <p class="section-desc">Dal cittadino al settore competente in pochi passaggi, con stato sempre tracciato.</p>
      <div class="grid3">
        <div class="card"><h3>1) Segnalazione</h3><p>Foto, descrizione, categoria e posizione geolocalizzata.</p></div>
        <div class="card"><h3>2) Smistamento</h3><p>Regole di assegnazione automatiche al settore corretto.</p></div>
        <div class="card"><h3>3) Aggiornamenti</h3><p>Notifiche e cronologia delle attività fino alla chiusura.</p></div>
      </div>
    </div>
  </section>

  <section id="comune">
    <div class="container">
      <h2 class="section-title">Per il Comune</h2>
      <div class="grid3">
        <div class="card"><h3>Workflow</h3><p>Stati, SLA e responsabilità chiare.</p></div>
        <div class="card"><h3>Dashboard</h3><p>Volumi, tempi medi, heatmap per priorità.</p></div>
        <div class="card"><h3>Integrazioni</h3><p>SPID/CIE, pagoPA, App IO, protocolli, GIS.</p></div>
      </div>
    </div>
  </section>

  <section id="cittadino">
    <div class="container">
      <h2 class="section-title">Per il Cittadino</h2>
      <div class="grid3">
        <div class="card"><h3>Invio in 1 minuto</h3><p>Interfaccia semplice e mobile-first.</p></div>
        <div class="card"><h3>Trasparenza</h3><p>Stato sempre visibile e notifiche.</p></div>
        <div class="card"><h3>Accessibilità</h3><p>Conforme WCAG 2.1 AA.</p></div>
      </div>
    </div>
  </section>

  <section>
    <div class="container">
      <h2 class="section-title">Screenshot</h2>
      <p class="section-desc">Uno sguardo all’app in azione.</p>
      <div class="screens">
        <img src="/uploads/screen1.jpg" alt="Schermata 1" style="border-radius:12px;border:1px solid var(--stroke)">
        <img src="/uploads/screen2.jpg" alt="Schermata 2" style="border-radius:12px;border:1px solid var(--stroke)">
        <img src="/uploads/screen3.jpg" alt="Schermata 3" style="border-radius:12px;border:1px solid var(--stroke)">
        <img src="/uploads/screen4.jpg" alt="Schermata 4" style="border-radius:12px;border:1px solid var(--stroke)">
      </div>
    </div>
  </section>

  <section id="faq">
    <div class="container">
      <h2 class="section-title">FAQ</h2>
      <details class="card"><summary>Serve un’app o basta il web?</summary><p>Supportiamo PWA e app mobile; il canale web è sempre disponibile.</p></details>
      <details class="card"><summary>È conforme al GDPR?</summary><p>Sì: minimizzazione dati, DPA, cifratura in transito/a riposo e controlli accesso.</p></details>
    </div>
  </section>

  <section id="contatti">
    <div class="container">
      <h2 class="section-title">Richiedi una demo</h2>
      <form class="card" name="demo" method="POST" data-netlify="true" netlify-honeypot="bot-field" onsubmit="demoOK(event)">
        <input type="hidden" name="form-name" value="demo">
        <p style="display:none"><label>Non compilare: <input name="bot-field"></label></p>
        <label>Nome e cognome</label><input required name="nome" style="width:100%;padding:.8rem;border-radius:10px;border:1px solid var(--stroke);background:transparent;color:var(--text)">
        <div style="height:10px"></div>
        <label>Email</label><input required type="email" name="email" style="width:100%;padding:.8rem;border-radius:10px;border:1px solid var(--stroke);background:transparent;color:var(--text)">
        <div style="height:10px"></div>
        <label>Messaggio</label><textarea required rows="4" name="messaggio" style="width:100%;padding:.8rem;border-radius:10px;border:1px solid var(--stroke);background:transparent;color:var(--text)"></textarea>
        <div style="margin-top:12px"><button class="btn" type="submit">Invia richiesta</button></div>
      </form>
    </div>
  </section>

  <footer>
    <div class="container" style="display:flex;justify-content:space-between;gap:12px;flex-wrap:wrap">
      <div class="brand"><img src="/logo.jpg" alt="Logo"><strong>Civic&nbsp;Watch</strong></div>
      <small style="color:var(--muted)">© <span id="y"></span> Civic Watch</small>
    </div>
  </footer>

  <!-- Admin leggero -->
  <button id="adminBtn" class="btn fab" style="display:none">🔒 Admin</button>
  <div id="adminPanel" class="admin">
    <h3>Contenuti rapidi</h3>
    <label>Titolo</label><input id="admTitle" type="text" placeholder="Segnalazioni rapide, gestione trasparente" style="width:100%">
    <label>Sottotitolo</label><textarea id="admSub" rows="3" style="width:100%"></textarea>
    <div class="row">
      <div><label>CTA primaria</label><input id="admCta1" type="text" placeholder="Richiedi una demo" style="width:100%"></div>
      <div><label>CTA secondaria</label><input id="admCta2" type="text" placeholder="Guarda come funziona →" style="width:100%"></div>
    </div>
    <div style="display:flex;gap:8px;margin-top:10px">
      <button id="admApply" class="btn" type="button">Applica</button>
      <button id="admExport" class="btn secondary" type="button">Copia codice</button>
      <button id="admClose" class="btn secondary" type="button">Chiudi</button>
    </div>
    <div id="exportWrap" style="display:none;margin-top:10px">
      <textarea id="exportCode" class="export-area" readonly></textarea>
    </div>
  </div>

  <script>
    // Intro animata
    window.addEventListener('load', ()=> document.documentElement.classList.add('loaded'));
    document.getElementById('y').textContent=new Date().getFullYear();

    // Badge: mostra solo loghi esistenti in /uploads
    const badgeList=[
      {label:'SPID/CIE', src:'/uploads/spid.svg'},
      {label:'pagoPA',   src:'/uploads/pagopa.svg'},
      {label:'IO',       src:'/uploads/io.svg'},
      {label:'GDPR',     src:'/uploads/gdpr.svg'},
      {label:'AgID',     src:'/uploads/agid.svg'}
    ];
    (async ()=>{
      const ok=async (u)=>{ try{ const r=await fetch(u,{method:'HEAD'}); return r.ok; }catch{ return false; } };
      const tpl=document.getElementById('badges');
      for(const b of badgeList){
        if(await ok(b.src)){
          const span=document.createElement('span'); span.className='badge';
          span.innerHTML=`<img src="${b.src}" alt="${b.label}"><span>${b.label}</span>`;
          tpl.parentElement.appendChild(span);
        }
      }
      tpl.remove();
    })();

    // Admin (senza password in locale; mettila in produzione)
    const ADMIN_PASS=""; // es: "Settembre45!" in produzione
    const q=(s)=>document.querySelector(s);
    const adminBtn=q('#adminBtn'), panel=q('#adminPanel');
    if(new URLSearchParams(location.search).get('admin')==='1'){ adminBtn.style.display='inline-flex'; }
    adminBtn?.addEventListener('click', ()=>{
      if(ADMIN_PASS && !sessionStorage.getItem('admOK')){
        const p=prompt('Password amministratore'); if(p!==ADMIN_PASS) return alert('Password errata'); sessionStorage.setItem('admOK','1');
      }
      panel.style.display=(panel.style.display==='block'?'none':'block');
      q('#admTitle').value=q('h1')?.textContent?.trim()||'';
      q('#admSub').value=q('.lead')?.textContent?.trim()||'';
      q('#admCta1').value=q('.actions .btn')?.textContent?.trim()||'';
      q('#admCta2').value=q('.actions .btn.secondary')?.textContent?.trim()||'';
    });
    q('#admClose').addEventListener('click', ()=> panel.style.display='none');
    q('#admApply').addEventListener('click', ()=>{
      const h1=q('h1'); if(h1) h1.textContent=q('#admTitle').value||h1.textContent;
      const lead=q('.lead'); if(lead) lead.textContent=q('#admSub').value||lead.textContent;
      const c1=q('.actions .btn'); if(c1) c1.textContent=q('#admCta1').value||c1.textContent;
      const c2=q('.actions .btn.secondary'); if(c2) c2.textContent=q('#admCta2').value||c2.textContent;
      alert('Modifiche applicate ✅');
    });
    q('#admExport').addEventListener('click', ()=>{
      const blob=new Blob([document.documentElement.outerHTML],{type:'text/html'});
      const r=new FileReader();
      r.onload=()=>{ const ta=q('#exportCode'); q('#exportWrap').style.display='block'; ta.value=r.result; ta.select(); document.execCommand('copy'); alert('Codice copiato ✅'); };
      r.readAsText(blob);
    });
    function demoOK(e){ e.preventDefault(); alert('Grazie! Ti ricontatteremo a breve.'); e.target.submit(); }
  </script>
</body>
</html>
